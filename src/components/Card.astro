---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<section class="link-card">
		
		<h2>
			{title}
			
		</h2>
		<p>
			{body}
		</p>
	<a href={href}>
	See more <span>&rarr;</span>
	</a>
</section>
<style>
	.link-card {
		border: 1px solid white;
		display: flex;
		flex-direction: column;
		width: 400px
	}
	.link-card a {
		all: unset;
	}

</style>
